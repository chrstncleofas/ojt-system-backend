{
  "name": "ojt-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "db:init": "ts-node -r tsconfig-paths/register src/scripts/init-db.ts",
    "db:seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "typecheck": "pnpm exec tsc --noEmit",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\" --ext .ts,.tsx",
    "format": "pnpm exec prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "prepare": "husky install",
    "prettier": "pnpm exec prettier --check \"src/**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,md}": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier --write"
    ]
  }
}
